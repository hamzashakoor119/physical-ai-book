# ===========================================
# Physical AI Humanoid Robotics Book Backend
# ===========================================

# OpenAI API Key (required for AI-generated responses)
# Get from: https://platform.openai.com/api-keys
# Without this, chatbot will return raw context instead of AI-generated answers
OPENAI_API_KEY=sk-your-openai-api-key-here

# Qdrant Cloud (required for vector search / RAG)
# Get from: https://cloud.qdrant.io
# Free tier available - create a cluster and get the URL + API key
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# Database (optional - defaults to SQLite for local dev)
# For Neon Postgres: postgres://user:pass@ep-xxx.neon.tech/dbname?sslmode=require
# For Railway Postgres: ${{Postgres.DATABASE_URL}}
DATABASE_URL=sqlite:///./app.db

# JWT Configuration (required for auth features)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=generate-a-secure-random-string-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (optional)
# Comma-separated list of allowed origins for production
# Example: https://your-frontend.vercel.app,https://custom-domain.com
ALLOWED_ORIGINS=

# Server Port (used in deployment, defaults to 8000)
PORT=8000

# ===========================================
# OPTIONAL: Web Search for Enhanced Responses
# ===========================================
# Enables web search to supplement book answers with latest information
# Supported providers: tavily, serpapi
# Get Tavily API key from: https://tavily.com (recommended, has free tier)
# Get SerpAPI key from: https://serpapi.com
# WEB_SEARCH_API_KEY=your-web-search-api-key
# WEB_SEARCH_PROVIDER=tavily
